---
interface Props {
    href: string;
    heading: string;
    subheading: string;
    image: string;
    imageAlt: string;
    tags?: boolean;
}

const { href, heading, subheading, image, imageAlt, tags} = Astro.props;
---

<div>
    <a href={href} class="relative rounded-lg h-60 overflow-y-auto group">
        <div class="absolute z-10 p-4 bottom-0 left-0 space-y-2">
            <h2>{heading}</h2>
            <p class="hidden sm:block text-sm">
                {subheading}
            </p>
            {tags && (
                <div class="flex flex-wrap gap-2">
                    <slot />
                </div>
            )}
        </div>

        <img class="rounded-lg object-cover h-full w-full" src={image} alt={imageAlt} />
        <div class="absolute rounded-lg inset-0 bg-gradient-to-t from-primary to-transparent transition-all group-hover:outline group-hover:outline-4 outline-primary-lighter duration-200"/>
    </a>
</div>