---
interface Props {
    href: string;
    heading: string;
    subheading: string;
}

const { href, heading, subheading} = Astro.props;
---

<a href={href} class="flex gap-x-4 items-center p-3 rounded-lg bg-primary transition-all hover:outline hover:outline-4 outline-primary-lighter duration-200" target="_blank">
    <slot />

    <div>
        <p class="text-text-primary">{heading}</p>
        <p class="text-sm">{subheading}</p>
    </div>
</a>