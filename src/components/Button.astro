---
interface Props {
    href: string;
    label: string;
    color: string;
}

const { href, label, color} = Astro.props;
---

<a href={href} class={`${color} flex w-fit px-4 py-1.5 rounded-lg text-sm transition duration-200
    `}>
    <div class="flex gap-2 items-center">
        <slot />

        {label}
    </div>
</a>